doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title Unused Styles Remover
    meta(name='author' content='Denis Soloviev')
    meta(name='description' content='Remove any unused fonts, colors, effects and grids, from your style set')
    link(href='https://pagecdn.io/lib/easyfonts/fonts.css' rel='stylesheet')
  body(style = "margin: 0").--onLoad
    style(type='text/css').__onLoad
      include __onload.css
      
    include _onLoad
    include _result
    include _report
    include _loader 
    include _options
    include _support

    script(type='text/javascript').__onLoad
      include __onload.js
